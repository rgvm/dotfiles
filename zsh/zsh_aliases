alias ls="ls -GF"
alias l="ls -la"
alias t="tmux"
alias c="clear"
alias e="exit"
alias g="git"
alias vim="nvim"
alias v="nvim"
alias ctags="`brew --prefix`/bin/ctags"

function mk() {
    mkdir $1 && cd $1
} 

function cd() {
    new_directory="$*";
    if [ $# -eq 0 ]; then
        new_directory=${HOME};
    fi;
    builtin cd "${new_directory}" && ls
}
